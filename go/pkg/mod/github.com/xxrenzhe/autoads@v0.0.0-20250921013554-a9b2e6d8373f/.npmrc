# Optimized npm configuration for faster builds
# See: https://docs.npmjs.com/cli/v7/configuring-npm/npmrc

# Disable audit and fund messages to reduce output
audit-level=moderate
fund=false

# Set log level to warn to reduce noise
loglevel=warn

# Enable progress bar for better visibility during local development
progress=true

# Configure npm to use a global cache directory
cache=/tmp/.npm

# Set strict SSL for security
strict-ssl=true

# Save exact versions for reproducible builds
save-exact=true

# Prefer offline installs when possible
prefer-offline=true

# Set maximum number of retries for network requests
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Configure npm registry timeouts
registry=https://registry.npmjs.org/
fetch-timeout=60000
fetch-retry-factor=2

# Enable npm dedupe when installing (deprecated - removed to avoid warnings)
# dedupe=true

# Set the maximum number of network connections
maxsockets=50

# Configure package lock behavior
package-lock=true
package-lock-only=false