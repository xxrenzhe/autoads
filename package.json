{
  "name": "autoads-monorepo",
  "version": "3.0.0",
  "description": "AutoAds SaaS Platform - Go Backend + Next.js Frontend",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "services/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:services\" \"npm:dev:frontend\"",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:services": "concurrently \"go run services/identity/main.go\" \"go run services/billing/main.go\" \"go run services/offer/main.go\" \"go run services/workflow/main.go\" \"go run services/siterank/main.go\" \"go run services/batchopen/main.go\" \"go run services/adscenter/main.go\"",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "npm run test:frontend",
    "test:frontend": "cd apps/frontend && npm test",
    "test:backend": "cd services && go test ./...",
    "docker:build": "docker build -f configs/docker/Dockerfile.monorepo -t autoads:latest .",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f deployments/docker-compose/docker-compose.prod.yml up -d",
    "deploy:preview": "./deployments/scripts/deploy.sh preview",
    "deploy:production": "./deployments/scripts/deploy.sh production",
    "health:check": "./deployments/scripts/health-check.sh",
    "test:firebase:admin": "node scripts/tests/admin-sdk-smoke.mjs",
    "clean": "rm -rf apps/frontend/.next apps/frontend/node_modules",
    "setup": "npm install"
  },
  "devDependencies": {
    "concurrently": "8.2.2",
    "turbo": "^2.0.9"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xxrenzhe/autoads.git"
  },
  "keywords": [
    "saas",
    "go",
    "nextjs",
    "docker",
    "autoads"
  ],
  "author": "AutoAds Team",
  "license": "MIT",
  "dependencies": {
    "next": "15.3.5",
    "@prisma/client": "6.16.0",
    "@types/react": "18.3.18",
    "@types/react-dom": "18.3.5",
    "firebase": "12.3.0",
    "firebase-admin": "^12.7.0"
  },
  "packageManager": "npm@10.8.2"
}
