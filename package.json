{
  "name": "autoads-monorepo",
  "version": "3.0.0",
  "description": "AutoAds SaaS Platform - Go Backend + Next.js Frontend",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev:frontend",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend/gofly_admin_v3 && go run cmd/server/main.go",
    "build": "npm run build:frontend",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:backend": "cd apps/backend/gofly_admin_v3 && go build -o bin/server cmd/server/main.go",
    "start": "cd apps/frontend && npm start",
    "test": "npm run test:frontend",
    "test:frontend": "cd apps/frontend && npm test",
    "test:backend": "cd apps/backend/gofly_admin_v3 && go test ./...",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd apps/frontend && npm run lint",
    "type-check": "cd apps/frontend && npm run type-check",
    "docker:build": "docker build -f configs/docker/Dockerfile.monorepo -t autoads:latest .",
    "docker:dev": "docker-compose -f deployments/docker-compose/docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose -f deployments/docker-compose/docker-compose.prod.yml up -d",
    "deploy:preview": "./deployments/scripts/deploy.sh preview",
    "deploy:production": "./deployments/scripts/deploy.sh production",
    "health:check": "./deployments/scripts/health-check.sh",
    "clean": "rm -rf apps/frontend/.next apps/frontend/node_modules apps/backend/bin",
    "setup": "npm install && npm run setup:frontend && npm run setup:backend",
    "setup:frontend": "cd apps/frontend && npm install",
    "setup:backend": "cd apps/backend/gofly_admin_v3 && go mod download"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xxrenzhe/autoads.git"
  },
  "keywords": [
    "saas",
    "go",
    "nextjs",
    "docker",
    "autoads"
  ],
  "author": "AutoAds Team",
  "license": "MIT",
  "dependencies": {
    "@types/react": "18.3.24",
    "@types/react-dom": "18.3.7"
  }
}
