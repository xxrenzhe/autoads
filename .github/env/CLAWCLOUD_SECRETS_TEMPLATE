# ClawCloud 自动化部署环境变量配置
# 请在 GitHub 仓库的 Settings > Secrets and variables > Actions 中配置以下变量

# === 应用配置 ===
# 生产环境域名
PROD_DOMAIN=your-production-domain.com
PROD_BASE_URL=https://your-production-domain.com
PROD_URL=https://your-production-domain.com

# Preview 环境域名
PREVIEW_DOMAIN=your-preview-domain.clawcloud.run
PREVIEW_BASE_URL=https://your-preview-domain.clawcloud.run

# === Google Ads API 配置 ===
# 生产环境
PROD_GOOGLE_CLIENT_ID=your_prod_google_client_id
PROD_GOOGLE_CLIENT_SECRET=your_prod_google_client_secret
PROD_GOOGLE_DEVELOPER_TOKEN=your_prod_google_developer_token
PROD_GOOGLE_REFRESH_TOKEN=your_prod_google_refresh_token

# Preview 环境
PREVIEW_GOOGLE_CLIENT_ID=your_preview_google_client_id
PREVIEW_GOOGLE_CLIENT_SECRET=your_preview_google_client_secret
PREVIEW_GOOGLE_DEVELOPER_TOKEN=your_preview_google_developer_token
PREVIEW_GOOGLE_REFRESH_TOKEN=your_preview_google_refresh_token

# === SimilarWeb API 配置 ===
PROD_SIMILARWEB_API_KEY=your_prod_similarweb_api_key
PREVIEW_SIMILARWEB_API_KEY=your_preview_similarweb_api_key

# === 数据库配置 ===
PROD_DATABASE_URL=your_prod_database_url
PREVIEW_DATABASE_URL=your_preview_database_url

# === Redis 配置（如果使用） ===
PROD_REDIS_URL=your_prod_redis_url
PREVIEW_REDIS_URL=your_preview_redis_url

# === 通知配置 ===
# Slack 通知 Webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# 通用 Webhook URL（可用于飞书、钉钉等）
WEBHOOK_URL=https://your-webhook-url

# === 其他服务配置 ===
# Sentry 错误追踪（可选）
PROD_SENTRY_DSN=your_prod_sentry_dsn
PREVIEW_SENTRY_DSN=your_preview_sentry_dsn

# Analytics 配置（可选）
PROD_GA_TRACKING_ID=your_prod_ga_id
PREVIEW_GA_TRACKING_ID=your_preview_ga_id

# === AdsPower 配置 ===
PROD_ADSPOWER_API_URL=http://your-prod-adspower:50325
PREVIEW_ADSPOWER_API_URL=http://your-preview-adspower:50325

# === 邮件服务配置（如果使用） ===
PROD_SMTP_HOST=your_prod_smtp_host
PROD_SMTP_PORT=587
PROD_SMTP_USER=your_prod_smtp_user
PROD_SMTP_PASS=your_prod_smtp_password

PREVIEW_SMTP_HOST=your_preview_smtp_host
PREVIEW_SMTP_PORT=587
PREVIEW_SMTP_USER=your_preview_smtp_user
PREVIEW_SMTP_PASS=your_preview_smtp_password