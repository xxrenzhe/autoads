# AutoAds SaaS Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Environment Configuration
DEPLOYMENT_ENV=production
NODE_ENV=production
DOMAIN=autoads.dev
PORT=8888

# Next.js Configuration
NEXT_PUBLIC_DEPLOYMENT_ENV=production
NEXT_PUBLIC_DOMAIN=autoads.dev
NEXT_TELEMETRY_DISABLED=1
NEXT_PRISMA_GUARD=true

# Database Configuration
DATABASE_URL=mysql://root:YOUR_PASSWORD@dbprovider.sg-members-1.clawcloudrun.com:30354/autoads_production
DB_HOST=dbprovider.sg-members-1.clawcloudrun.com
DB_PORT=30354
DB_USERNAME=root
DB_PASSWORD=YOUR_DB_PASSWORD
DB_DATABASE=autoads_production

# Redis Configuration
REDIS_URL=redis://default:YOUR_PASSWORD@dbprovider.sg-members-1.clawcloudrun.com:32284/0
REDIS_HOST=dbprovider.sg-members-1.clawcloudrun.com
REDIS_PORT=32284
REDIS_PASSWORD=YOUR_REDIS_PASSWORD
REDIS_DATABASE=0

# Backend (Go) Configuration for BFF
BACKEND_URL=http://127.0.0.1:8080
BFF_MAX_BODY=2097152
BFF_UPSTREAM_TIMEOUT_MS=15000
BFF_READY_TIMEOUT_MS=1200
BFF_READY_TTL_MS=3000

# Authentication Configuration
JWT_SECRET=YOUR_JWT_SECRET_KEY_HERE
AUTH_SECRET=YOUR_AUTH_SECRET_KEY_HERE
AUTH_URL=https://www.autoads.dev

# Google OAuth Configuration
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET

# External Services
SIMILARWEB_API_URL=https://data.similarweb.com/api/v1/data
SIMILARWEB_API_KEY=YOUR_SIMILARWEB_API_KEY

# Security Configuration
ENCRYPTION_KEY=YOUR_ENCRYPTION_KEY_32_CHARS_LONG
CSRF_SECRET=YOUR_CSRF_SECRET_KEY
SECURE_COOKIES=true
HTTPS_ONLY=true

# Performance Configuration
MEMORY_LIMIT=2048
CPU_LIMIT=2

# Logging Configuration
LOG_LEVEL=warn
DEBUG=false

# Email Configuration (Production)
EMAIL_ENABLED=true
SMTP_HOST=YOUR_SMTP_HOST
SMTP_PORT=587
SMTP_USERNAME=YOUR_SMTP_USERNAME
SMTP_PASSWORD=YOUR_SMTP_PASSWORD

# Backup Configuration (Production)
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Monitoring Configuration
SLACK_WEBHOOK_URL=YOUR_SLACK_WEBHOOK_URL
ALERT_WEBHOOK=YOUR_ALERT_WEBHOOK_URL

# Feature Flags
WEBSOCKET_ENABLED=true
FILE_UPLOAD_ENABLED=true
EMAIL_ENABLED=true
BACKUP_ENABLED=true

# Production Security
RATE_LIMIT_ENABLED=true
CORS_ENABLED=true
CSRF_ENABLED=true
