{
  "hosting": [
    {
      "site": "autoads-preview",
      "source": "apps/frontend",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "frameworksBackend": { "region": "asia-northeast1" }
    },
    {
      "site": "autoads-prod",
      "source": "apps/frontend",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "frameworksBackend": { "region": "asia-northeast1" }
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
