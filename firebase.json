{
  "hosting": [
    {
      "site": "autoads-preview",
      "public": "apps/frontend/public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        { "source": "**", "run": { "serviceId": "frontend", "region": "asia-northeast1" } }
      ]
    },
    {
      "site": "autoads-prod",
      "public": "apps/frontend/public",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        { "source": "**", "run": { "serviceId": "frontend", "region": "asia-northeast1" } }
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
