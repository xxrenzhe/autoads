rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Secure the user_checkins collection
    // This collection is used for fast, real-time decisions on the check-in API endpoint.
    match /user_checkins/{userId} {
      // A user can only read their own check-in status.
      allow read: if request.auth != null && request.auth.uid == userId;

      // A user can only create their own document.
      // They cannot update it directly; updates are handled by backend services.
      // This prevents users from tampering with their streak count.
      allow create: if request.auth != null && request.auth.uid == userId;

      // Disallow updates and deletes from the client.
      allow update, delete: if false;
    }

    // Placeholder for user-specific data, e.g., profiles or settings
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // You can add more specific rules for other collections here.
    // For example, for a "workflows" collection:
    // match /workflows/{workflowId} {
    //   allow read: if resource.data.userId == request.auth.uid;
    // }
  }
}
